<div class="container">
    <h2 class="page-title">Available drones</h2>

    <hr>
    <div class="row">
        {{#each drones}}
        <div class="col-3 mb-5 mt-5">
            <article>
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5>{{name}}</h5>
                        <p>Number of propellers: {{propellers}}</p>
                        <p>Maximum speed: {{maxSpeed}} mph</p>
                        <div class="card-buttons">
                            <a href="/drones/{{id}}/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/drones/{{id}}/delete" method="POST" style="display: inline-block">
                                <input type="submit" value="Delete" class="btn btn-danger btn-sm">
                            </form>
                        </div>

                    </div>
                </div>
            </article>
        </div>
        {{/each}}
    </div>

</div>